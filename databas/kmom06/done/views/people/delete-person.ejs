<form class="label-left" method="post" action="/people/delete">
    <fieldset>
        <legend>About to delete person:</legend>

        <label for="id">Id</label>
        <input id="id" type="text" name="id" readonly value="<%= res.id %>">

        <label for="fname">Firstname</label>
        <input id="fname" type="text" name="fname" readonly value="<%= res.firstname %>">

        <label for="lname">Lastname</label>
        <input id="lname" type="text" name="lname" readonly value="<%= res.lastname %>">

        <label for="born">Born</label>
        <input id="born" type="text" name="born" readonly value="<%= res.born %>">

        <label for="tvshow">Tv show</label>
        <input id="tvshow" type="text" name="tvshow" readonly value="<%= res.title %>">

        <label for="place">Place</label>
        <input id="place" type="text" name="place" readonly value="<%= res.place %>">

        <input type="submit" name="doit" value="Delete">
    </fieldset>
</form>


